<div class="container index">
  <div class="row index-row justify-content-center align-items-center">
    <div class="content">
      {{#if userInSession}}
        <h2 class="card-title">Welcome {{userInSession.username}}</h2>
        <h5 class="card-text">Search cards to create your deck</h5>
        <div class="btn-index">
          <a href="/search" class="btn btn-info">Search</a>
          <form
            id="logout-form"
            class="form-inline my-2 my-lg-0"
            action="/logout"
            method="POST"
          >
            <button
              id="user-home"
              class="btn btn-danger my-2 mr-sm-2"
            >Logout</button>
          </form>
        </div>
      {{else}}
        <h1 class="card-subtitle">Magic Deck Creator</h1>
        <br />
        <h6 class="card-text text-center">Create and print your decklists</h6>
        <br />
        <div class="btn-index">
          <div class="tabs">
            <button id="login-tab" class="tab-btn active">Login</button>
            <button id="signup-tab" class="tab-btn">Signup</button>
          </div>
          {{! <a href="/login" class="btn btn-light">Login</a> }}
          <div id="form-auth">
            <div id="login-form" class="tab-content">
              <form action="/login" method="POST">

                <input type="text" name="username" placeholder="Username" />

                <input type="password" name="password" placeholder="Password" />

                <button type="submit" class="btn btn-danger">Login</button>
                {{#if errorMessage}}
                  <p class="error">{{errorMessage}}</p>
                {{/if}}
              </form>
            </div>
          </div>
          {{! <a href="/signup" class="btn btn-light">Signup</a> }}
          <div id="signup-form" class="tab-content">
            <div id="form-auth">
              <form action="/signup" method="POST">

                <input type="text" name="username" placeholder="Username" />

                <input type="password" name="password" placeholder="Password" />

                <button type="submit" class="btn btn-danger">Create account</button>
                {{#if errorMessage}}
                  <p class="error">{{errorMessage}}</p>
                {{/if}}
              </form>
            </div>
          </div>
        </div>
      {{/if}}
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () { var activeForm =
  "login-form"; document.getElementById("login-tab").addEventListener("click",
  function () { if (activeForm !== "login-form") {
  document.getElementById("login-form").style.display = "block";
  document.getElementById("signup-form").style.display = "none"; activeForm =
  "login-form"; document.getElementById("login-tab").classList.add("active");
  document.getElementById("signup-tab").classList.remove("active"); } });
  document.getElementById("signup-tab").addEventListener("click", function () {
  if (activeForm !== "signup-form") {
  document.getElementById("login-form").style.display = "none";
  document.getElementById("signup-form").style.display = "block"; activeForm =
  "signup-form"; document.getElementById("signup-tab").classList.add("active");
  document.getElementById("login-tab").classList.remove("active"); } });
  document.getElementById("login-tab").classList.add("active");
  document.getElementById("signup-tab").classList.remove("active");
  document.getElementById("login-form").style.display = "block";
  document.getElementById("signup-form").style.display = "none"; });
</script>